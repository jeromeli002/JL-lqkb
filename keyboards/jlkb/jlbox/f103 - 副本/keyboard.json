{
    "keyboard_name": "JLBOX",
    "manufacturer": "JLKB",
    "url": "",
    "maintainer": "JL",
    "usb": {
        "vid": "0xFEED",
        "pid": "0x5009",
        "device_version": "0.0.1"
    },
     
    "encoder": {
    "rotary": [
      { "pin_a": "B4", "pin_b": "B5", "resolution": 4 },
      { "pin_a": "B9", "pin_b": "B8", "resolution": 4 },
      { "pin_a": "A15", "pin_b": "B3", "resolution": 4 },
      { "pin_a": "A8", "pin_b": "B15", "resolution": 4 }
    ]
  }
  
    "rgblight": {
        "saturation_steps": 8,  // 饱和度步数
        "brightness_steps": 8,  // 亮度步数
        "led_count": 28,        //灯数量
        "hue_steps":8,          // 色调步数 
        "max_brightness":128,   // 最大亮度 
        "sleep": true,          // 睡眠时关闭灯 
        "animations": {
            "breathing": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "snake": true,
            "knight": true,
            "christmas": true,
            "static_gradient": true,
            "rgb_test": true,
            "alternating": true,
            "twinkle": true
        }
    },
    "ws2812": {
        "pin": "C13"
    },
    
    "indicators": {
      "caps_lock": "B8",      //大写指示灯
      "scroll_lock": "B7",    //大写指示灯
      "num_lock": "A14"       //num指示灯
      "on_state": 0         //1开启 = 高 0开启 = 低
    },
    
    "matrix_pins": {
      "cols": ["B0", "A6", "A4", "C15" ],
        "rows": ["B1", "A7", "A5", "A3", "C14", "B10", "B11", "B12", "B13" ]
      "io_delay": 5    //延迟
    },
    
    "diode_direction": "COL2ROW",
    //"processor": "STM32F103",    //mcu型号
    //"bootloader": "stm32duino",   //bootloader
    "layouts": {
        "LAYOUT": {
            "layout": [
            //{"label": "Esc", "matrix": [row, col], "x": 0, "y": 0}
                {"x": 0, "y": 0, "matrix": [0, 0]},
                {"x": 1, "y": 0, "matrix": [0, 1]},
                {"x": 2, "y": 0, "matrix": [0, 2]},
                {"x": 3, "y": 0, "matrix": [0, 3]},

                {"x": 0, "y": 1, "matrix": [1, 0]},
                {"x": 1, "y": 1, "matrix": [1, 1]},
                {"x": 2, "y": 1, "matrix": [1, 2]},
                {"x": 3, "y": 1, "matrix": [1, 3]},

                {"x": 0, "y": 2, "matrix": [2, 0]},
                {"x": 1, "y": 2, "matrix": [2, 1]},
                {"x": 2, "y": 2, "matrix": [2, 2]},
                {"x": 3, "y": 2, "matrix": [2, 3]},

                {"x": 0, "y": 3, "matrix": [3, 0]},
                {"x": 1, "y": 3, "matrix": [3, 1]},
                {"x": 2, "y": 3, "matrix": [3, 2]},
                {"x": 3, "y": 3, "matrix": [3, 3]},

                {"x": 0, "y": 4, "matrix": [4, 0]},
                {"x": 1, "y": 4, "matrix": [4, 1]},
                {"x": 2, "y": 4, "matrix": [4, 2]},
                {"x": 3, "y": 4, "matrix": [4, 3]}, 

                {"x": 0, "y": 5, "matrix": [5, 0]},
                {"x": 1, "y": 5, "matrix": [5, 1]},
                {"x": 2, "y": 5, "matrix": [5, 2]},
                {"x": 3, "y": 5, "matrix": [5, 3]},

                {"x": 0, "y": 6, "matrix": [6, 0]},
                {"x": 1, "y": 6, "matrix": [6, 1]},
                {"x": 2, "y": 6, "matrix": [6, 2]},
                {"x": 7, "y": 6, "matrix": [6, 3]}, 

                {"x": 0, "y": 7, "matrix": [7, 0]},
                {"x": 1, "y": 7, "matrix": [7, 1]},
                {"x": 2, "y": 7, "matrix": [7, 2]},
                {"x": 7, "y": 7, "matrix": [7, 3]},   

                {"x": 0, "y": 8, "matrix": [8, 0]},
                {"x": 1, "y": 8, "matrix": [8, 1]},
                {"x": 2, "y": 8, "matrix": [8, 2]},
                {"x": 3, "y": 8, "matrix": [8, 3]}           
                
            ]
        }
    }
}
