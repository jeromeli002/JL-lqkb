{
    "keyboard_name": "JLBOX",
    "manufacturer": "JLKB",
    "url": "",
    "maintainer": "JL",
    "usb": {
        "vid": "0xFEED",
        "pid": "0x5009",
        "device_version": "0.0.1"
    },
     
    "encoder": {
    "rotary": [
      { "pin_a": "B4", "pin_b": "B5", "resolution": 4 },
      { "pin_a": "B9", "pin_b": "B8", "resolution": 4 },
      { "pin_a": "A15", "pin_b": "B3", "resolution": 4 },
      { "pin_a": "A8", "pin_b": "B15", "resolution": 2 }
    ]
  }
    "rgblight": {
        "saturation_steps": 8,/* 饱和度步数 */
        "brightness_steps": 8,/* 亮度步数 */
        "led_count": 8, /* 灯数量 */
        "hue_steps":8,/* 色调步数 */
        "max_brightness":150,/* 最大亮度 */
        "sleep": true,/* 睡眠时关闭灯 */
        /* "led_map": [4, 3, 2, 1, 0], LE灯D顺序 */
        "animations": {/* 灯效 */
            "static_light": true,
            "breathing": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "snake": true,
            "knight": true,
            "christmas": true,
            "static_gradient": true,
            "rgb_test": true,
            "alternating": true,
            "twinkle": true
        }
    },
  "ws2812": {
    "pin": "B13"
  },  
    "matrix_pins": {
       "cols": ["B0", "A6", "C15", "C14", "A0" ],
       "rows": ["B1", "A7", "A5", "A4", "A3" ]
      "io_delay": 5    //延迟
    },
    
    "diode_direction": "COL2ROW",
    //"processor": "STM32F103",    //mcu型号
    //"bootloader": "stm32duino",   //bootloader
    "layouts": {
        "LAYOUT": {
            "layout": [
            //{"label": "Esc", "matrix": [row, col], "x": 0, "y": 0}
                {"x": 0, "y": 0, "matrix": [0, 0]},
                {"x": 1, "y": 0, "matrix": [0, 1]},
                {"x": 2, "y": 0, "matrix": [0, 2]},
                {"x": 3, "y": 0, "matrix": [0, 3]},
                {"x": 4, "y": 0, "matrix": [0, 4]},

                {"x": 0, "y": 1, "matrix": [1, 0]},
                {"x": 1, "y": 1, "matrix": [1, 1]},
                {"x": 2, "y": 1, "matrix": [1, 2]},
                {"x": 3, "y": 1, "matrix": [1, 3]},
                {"x": 4, "y": 1, "matrix": [1, 4]},

                {"x": 0, "y": 2, "matrix": [2, 0]},
                {"x": 1, "y": 2, "matrix": [2, 1]},
                {"x": 2, "y": 2, "matrix": [2, 2]},
                {"x": 3, "y": 2, "matrix": [2, 3]},
                {"x": 4, "y": 2, "matrix": [2, 4]},

                {"x": 0, "y": 3, "matrix": [3, 0]},
                {"x": 1, "y": 3, "matrix": [3, 1]},
                {"x": 2, "y": 3, "matrix": [3, 2]},
                {"x": 3, "y": 3, "matrix": [3, 3]},
                {"x": 4, "y": 3, "matrix": [3, 4]},

                {"x": 0, "y": 4, "matrix": [4, 0]},
                {"x": 1, "y": 4, "matrix": [4, 1]},
                {"x": 2, "y": 4, "matrix": [4, 2]},
                {"x": 3, "y": 4, "matrix": [4, 3]}, 
                {"x": 4, "y": 4, "matrix": [4, 4]}          
                
            ]
        }
    }
}
