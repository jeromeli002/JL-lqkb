{
  "keyboard_name": "CV工程师专用键盘",
  "manufacturer": "JL",
  "url": "https://jlkb.taobao.com",
  "maintainer": "qmk",
  "usb": {
    "vid": "0xFEED",
    "pid": "0x6060",
    "device_version": "0.0.1"
  },
  
    "encoder": {
    "rotary": [
      { "pin_a": "A6", "pin_b": "A7", "resolution": 4 },
      { "pin_a": "B9", "pin_b": "A15", "resolution": 4 },
      { "pin_a": "A4", "pin_b": "A5", "resolution": 4 },
      { "pin_a": "C15", "pin_b": "A3", "resolution": 4 }
    ]
  } 
    "rgblight": {
        "saturation_steps": 8,/* 饱和度步数 */
        "brightness_steps": 8,/* 亮度步数 */
        "led_count": 3, /* 灯数量 */
        "hue_steps":8,/* 色调步数 */
        "max_brightness":255,/* 最大亮度 */
        "sleep": true,/* 睡眠时关闭灯 */
        /* "led_map": [4, 3, 2, 1, 0], LE灯D顺序 */
        "animations": {/* 灯效 */
            "static_light": true,
            "breathing": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "snake": true,
            "knight": true,
            "christmas": true,
            "static_gradient": true,
            "rgb_test": true,
            "alternating": true,
            "twinkle": true
        }
    },
  "ws2812": {
    "pin": "B8"
  },
  "matrix_pins": {
    "cols": ["B12", "B13", "B14" ],
    "rows": ["B3", "B4", "B5" ]
  },
  "diode_direction": "COL2ROW",
  "layouts": {
    "LAYOUT": {
      "layout": [
        {"matrix": [0, 0], "x": 0, "y": 0},
        {"matrix": [0, 1], "x": 1, "y": 0},
        {"matrix": [0, 2], "x": 2, "y": 0},

        {"matrix": [1, 0], "x": 0, "y": 1, "w": 1.25},
        {"matrix": [1, 1], "x": 1.25, "y": 1},
        {"matrix": [1, 2], "x": 2.25, "y": 1},

        {"matrix": [2, 0], "x": 0, "y": 2, "w": 1.75},
        {"matrix": [2, 1], "x": 1.75, "y": 2},
        {"matrix": [2, 2], "x": 2.75, "y": 2},

      ]
    }
  }
}
